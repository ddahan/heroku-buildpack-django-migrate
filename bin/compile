#!/usr/bin/env bash

# fail fast and fail hard
set -eo pipefail

BUILD_DIR=$1
PYTHON_EXE="/app/.heroku/python/bin/python"


echo "-----> Debugging:"
ls -l /app/.heroku/
ls -l /app/.heroku/python/
ls -l /app/.heroku/python/bin/



echo "-----> Running Django migrations"
$PYTHON_EXE $BUILD_DIR/manage.py migrate