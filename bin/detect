#!/usr/bin/env bash

BUILD_DIR=$1

echo "-----> /app directory:"
ls -l /app
echo "-----> /app/vendor directory:"
ls -l /app/vendor

echo "-----> .heroku directory:"
ls -l .heroku/


# exit early if app is not Django
if [ ! -f $BUILD_DIR/requirements.txt ] && [ ! -f $BUILD_DIR/manage.py ]; then
    exit 1
fi

echo Django